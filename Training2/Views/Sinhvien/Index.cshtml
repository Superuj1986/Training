@model IEnumerable<Training2.Models.SinhVien>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<a href="~/DeTai">Danh sách đề tài</a>
<a href="~/GVHD">Danh sách giáo viên</a>

<div class="container" style="margin: 100px 0px">
    <div class="row">
        <div class="col-md-12">
            <h3>Danh sách sinh viên</h3>
            <a href="~/Sinhvien/Create">Thêm mới</a>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.MaSV)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HoTen)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NgaySinh)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MaLop)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Khoa)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nganh)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaSV)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HoTen)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NgaySinh)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaLop)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Khoa)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nganh)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.MaSV }) |
                            @Html.ActionLink("Details", "Details", new { id = item.MaSV }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.MaSV })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
